        "phpstan": "vendor/bin/phpstan analyse src"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Helpers/customHelper.php"
        ]
    },
    "authors": [
        {
            "name": "Bruno Oliveira",
            "email": "bds.commus@gmail.com"
        }
    ],
    "minimum-stability": "beta"
