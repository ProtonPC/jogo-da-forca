{
    "name": "proton/jogo-da-forca",
    "description": "Amazing Jogo da Forca",
    "type": "project",
    "scripts": {
        "serve": "php -S localhost:8000 -t public",
        "test": "vendor/bin/phpunit --colors && vendor/bin/phpstan analyse src --level 5",
