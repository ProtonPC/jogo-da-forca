{
    "name": "proton/jogo-da-forca",
    "description": "Amazing Jogo da Forca",
    "type": "project",
    "scripts": {
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "php -S localhost:8000 -t public"
        ],
        "test": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpunit --colors && vendor/bin/phpstan analyse src --level 5"
        ],
        "phpunit": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpunit --colors --testdox --do-not-cache-result"
        ],
        "phpstan": [
            "Composer\\Config::disableProcessTimeout",
            "vendor/bin/phpstan analyse src --level 5"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^10.3",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "friendsofphp/php-cs-fixer": "^3.27"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "files": [
            "src/Helpers/customHelper.php"
        ]
    },
    "authors": [
        {
            "name": "Alan Sales",
            "email": "alansales00@gmail.com"
        },
        {
            "name": "Bruno Oliveira",
            "email": "bds.commus@gmail.com"
        },
        {
            "name": "Jeov√° Aires",
            "email": "juninhorpgs@gmail.com"
        }
    ],
    "minimum-stability": "beta",
    "require": {
        "pecee/simple-router": "5.3.0.5",
        "twig/twig": "^3.7"
    },

    "config": {
        "process-timeout": 0
    }


}
